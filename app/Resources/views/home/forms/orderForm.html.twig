{# app/Resources/views/home/forms/orderForm.html.twig #}

{{ form_start(orderForm) }}
<div class="col s12 m12 l6 grey darken-1" id="home_col_form">

    {% if form_errors(orderForm) != null %}
        <div class="card card-error center">
            {{ form_errors(orderForm) }}
        </div>
    {% endif %}

    <div class="line_form">
        <h3 class="center">Date de votre venue</h3>
        <hr />

        {% if form_errors(orderForm.visitDate) != null  %}
            <div class="card card-error center">
                {{ form_errors(orderForm.visitDate) }}
            </div>
        {% endif %}

        <div id="blockInfos" class="invisible">
            Il n'est pas possible de réserver des billets les mardis et dimanche.
        </div>
        {{ form_widget(orderForm.visitDate, {
            'attr': {
                'class': 'datepicker validate center-block',
                'onchange': 'isFullDayEnable()'
                    }
            })
        }}
    </div>

    <div class="line_form">
        <h3 class="center">Type de billet</h3>
        <hr />

        {% if form_errors(orderForm.ticketType) != null  %}
            <div class="card card-error center">
                {{ form_errors(orderForm.ticketType) }}
            </div>
        {% endif %}

        <div class="col s12 center-align">
        {{ form_widget(orderForm.ticketType, {
            'attr': {
                'class': 'with-gap',
            }
        })
        }}
        </div>
    </div>

    <div class="line_form">
        <h3 class="center">Nombre de billet</h3>
        <hr />
        <div class="center">Veuillez comptabiliser chaque personne accédant au musée,<br />enfants en bas âge inclus.</div>

        {% if form_errors(orderForm.ticketNumber) != null  %}
            <div class="card card-error center">
                {{ form_errors(orderForm.ticketNumber) }}
            </div>
        {% endif %}

        <div class="col s12">
            {{ form_widget(orderForm.ticketNumber)
            }}
        </div>
    </div>

    <div class="line_form">
        <h3 class="center">Votre adresse mail</h3>
        <hr />

        {% if form_errors(orderForm.mailContact.first) != null  %}
            <div class="card card-error center">
                {{ form_errors(orderForm.mailContact.first) }}
            </div>
        {% endif %}


        {{ form_widget(orderForm.mailContact.first, {
            'attr': {
                'class': 'validate center-block',
                'placeholder': ''
            }
        })
        }}
    </div>

    <div class="line_form">
        {{ form_widget(orderForm.mailContact.second, {
            'attr': {
                'class': 'validate center-block',
                'placeholder': 'Vérification du mail'
            }
        })
        }}
    </div>
    <div class="line_form">
        <div class="input-field center center-block">
        {{ form_widget(orderForm.suivant,{
            'attr': {
                'class': 'waves-effect btn bgBlue',
            }
        }) }}
        </div>
    </div>
</div>
{{ form_end(orderForm) }}

